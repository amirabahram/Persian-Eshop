@using Main.Domain.ViewModel.AboutUs;
@model CreateAboutUsViewModel

@{
    ViewData["Title"] = "CreateAboutUs";
}

<div class="ui-box bg-white">
    <div class="ui-box-title fs-5 fw-bold">درباره شما </div>
 
    <div class="ui-box-content">
      
        <!-- start of contact-us-form -->
        <form action="#" class="contact-us-form">
            <div class="row">
                
                <div class="col-md-6">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <label class="label">موضوع</label>
                        <input type="text" class="form-control"  asp-for="Title" placeholder="موضوع">
                        <span asp-validation-for="Title"/>
                        
                    </div>
                    <!-- end of form-element -->
                </div>
                
                              <div class="col-12">
                    <!-- start of form-element -->
                    <div class="form-element-row mb-5">
                        <label class="label">متن درباره ما </label>
                        <textarea rows="5" asp-for="Description" class="form-control" placeholder="متن درباره ما "></textarea>
                        <span asp-validation-for="Description"/>

                    </div>
                    <!-- end of form-element -->
                </div>
                <div class="col-12">
                    <!-- start of form-element -->
                    <div class="form-element-row form-element-row-file mb-5">
                        <div class="text-center">
                            <div class="fs-6 fw-bold text-dark">عکس یا ویدیو خود را بارگذاری کنید.</div>
                            <div class="fs-7 fw-bold text-muted mb-4">
                                ( حداکثر ۵ تصویر jpeg یا PNG
                                حداکثر یک
                                مگابایت، یک ویدیو MP4 حداکثر ۵۰ مگابایت )
                            </div>
                        </div>
                        <div class="custom-input-file">
                            <input asp-for="ImagAbouts" type="file" class="custom-input-file-input" />
                            <label for="attachment" class="custom-input-file-label">
                                <span class="label">
                                    <i class="ri-arrow-up-fill me-1"></i> انتخاب عکس یا ویدئو
                                </span>
                            </label>
                        </div>
                    </div>
                    <!-- end of form-element -->
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary px-4">ثبت و ارسال</button>
                </div>
            </div>
        </form>
        <!-- end of contact-us-form -->
    </div>
</div>
