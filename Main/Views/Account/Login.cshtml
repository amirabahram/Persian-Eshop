            <label for="rememberme">مرا به خاطر بسپار</label>
            <input asp-for="RememberMe" class="checkbox-input" type="checkbox" id="rememberme" />
        </div>*@
                <label class="checkbox-label">
                    <input asp-for="RememberMe" type="checkbox" class="checkbox-input" id="RememberMe" />
                    <span>مرابه خاطر بسپار!</span>
                </label>
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row mb-3">
                    <button type="submit" class="btn btn-primary">ورودبه سایت</button>
                </div>
                <!-- end of form-element -->
                <!-- start of form-element -->
                <div class="form-element-row">
                    <div>
                        درصورتیکه هنوز عضوسایت نیستید، روی این <a asp-controller="Account" asp-action="RegisterUser" class="link">
                            
                            لینک
                        </a> 
                       کلیک کنید تا به صفحه ثبت نام منتقل شوید.
                    </div>
                </div>
                <!-- end of form-element -->
            </form>
            <!-- end of auth-form -->
        </div>
        <!-- end of auth-box -->
    </div>
    <!-- start of auth-container -->
