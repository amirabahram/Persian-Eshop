@using Main.Domain.ViewModel.User
@model LoginViewModel ;

@{
    ViewData["Title"] = "صفحه ورودبه سایت";
    Layout = "_LayoutAccount";
}

<main class="page-content page-auth">
    <!-- start of auth-container -->
    <div class="auth-container">
        <div class="auth-title mb-3">  فرم ورود به سایت</div>
        <!-- start of auth-box -->
        <div class="auth-box ui-box">
            <!-- start of auth-form -->
            <form asp-controller="Account" asp-action="Login" class="auth-form">
                <!-- start of form-element -->
                <div class="form-element-row mb-5">
                    <input asp-for="Email" type="text" class="form-control" placeholder=" ایمیل">
                    <span asp-validation-for="Email"></span>@*asp-validation is for ModelState*@

                </div>
                <div class="form-element-row mb-5">
                    <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور">
                    <span asp-validation-for="Password"></span>
                </div>
