<html xmlns="http://www.w3.org/1999/xhtml">
<!--Head-->
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>

    <meta name="description" content="login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="~/admin/assets/img/favicon.png" type="image/x-icon">

    <!--Basic Styles-->
    <link href="~/admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link id="bootstrap-rtl-link" href="" rel="stylesheet" />
    <link href="~/admin/assets/css/font-awesome.min.css" rel="stylesheet" />

    <!--Fonts-->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300" rel="stylesheet" type="text/css">

    <!--Beyond styles-->
    <link id="beyond-link" href="~/admin/assets/css/beyond.min.css" rel="stylesheet" />
    <link href="~/admin/assets/css/demo.min.css" rel="stylesheet" />
    <link href="~/admin/assets/css/animate.min.css" rel="stylesheet" />
    <link id="skin-link" href="" rel="stylesheet" type="text/css" />

    <!--Skin Script: Place this script in head to load scripts for skins and rtl support-->
    <script src="~/admin/assets/js/skins.min.js"></script>
</head>
<!--Head Ends-->
<!--Body-->
<body>

    <form asp-controller="Account" asp-action="login" class="auth-form">

        <div class="col-md-6" style="margin-right:100px;margin-top:20px">
            <div class="login-container animated fadeInDown ">
                <div class="loginbox bg-white">
                    <div class="loginbox-title" style="text-align:center">ورود</div>
                    <div class="loginbox-social">

                        <div class="loginbox-or">
                            <div class="or-line"></div>
                            <div class="or">OR</div>
                        </div>
                        <div class="loginbox-textbox">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />

                        </div>
                        <div class="loginbox-textbox">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <div class="loginbox-forgot">
                            <a href="">Forgot Password?</a>
                        </div>
                        <div class="loginbox-submit">
                            <input type="button" class="btn btn-primary btn-block" value="Login">
                        </div>
                        <div class="loginbox-signup">
                            <a href="register.html">Sign Up With Email</a>
                        </div>
                    </div>
                    <div class="logobox">
                    </div>
                </div>
            </div>
        </div>

        <!--Basic Scripts-->
        <script src="~/admin/adassets/js/jquery.min.js"></script>
        <script src="~/admin/assets/js/bootstrap.min.js"></script>
        <script src="~/admin/assets/js/slimscroll/jquery.slimscroll.min.js"></script>
        <script src="~/admin/assets/js/slimscroll/jquery.slimscroll.min.js"></script>

        <!--Beyond Scripts-->
        <script src="~/admin/assets/js/beyond.js"></script>
    </form>
   
</body>
<!--Body Ends-->
</html>
