@using Main.Domain.Models.BasePaging
@model PagingViewModel


<nav aria-label="Page navigation ">
    <ul class="pagination justify-content-center mt-3">
        @if (Model.StartPage < Model.CurrentPage)
        {
            <li class="page-item prev">
                <a class="page-link cursor-pointer" asp-route-CurrentPage="@(Model.CurrentPage - 1)" onclick="FillPageId(@(Model.CurrentPage - 1))">
                    <span >قبلی</span>
                </a>
            </li>
        }
        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
        {
            if (Model.CurrentPage == i)
            {
                <li class="page-item active">
                    <a class="page-link cursor-pointer" href="javascript:void(0);">@i</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link cursor-pointer" asp-route-CurrentPage="@i" onclick="FillPageId(@i)">@i</a>
                </li>
            }

        }
        @if (Model.EndPage > Model.CurrentPage)
        {
            <li class="page-item next">
                <a class="page-link cursor-pointer" asp-route-CurrentPage="@(Model.CurrentPage + 1)" onclick="FillPageId(@(Model.CurrentPage + 1))">
                    <span> بعدی</span>
                </a>
            </li>
        }

    </ul>
</nav>