<form    asp-controller="User" asp-action="UploadImage"  asp-area="User" enctype="multipart/form-data" >
    <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLable" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLable">تصویر کاربر</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="row">

                        <div class="col-lg-8">
                            <img id="modalImage" class="img-responsive img-thumbnail" style="height:250px;width:250px" src="~/Images/@Model.AvatarName" />
                        </div>

                        <div class="col-lg-8">
                            <input type="file" id="file" name="image" />
                            <input type="submit" value="ثبت تصویر" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-secondary" data-dismiss="modal"> بستن</a>
                </div>

            </div>
        </div>
    </div>

</form>
