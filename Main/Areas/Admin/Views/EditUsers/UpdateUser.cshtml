@model Main.Domain.ViewModel.Admin.UpdateAdminViewModel

@{
    ViewData["Title"] = "ویرایش کاربر";

}


<div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
    <div class="widget">
        <div class="widget-header bordered-top bordered-palegreen">
            <span class="widget-caption">Default Inputs</span>
        </div>
        <div class="widget-body">
            <div class="collapse in">
                <form asp-controller="EditUsers" asp-action="UpdateUser" asp-area="Admin">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">Name</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">Family</label>
                                <input type="text" asp-for="Family" class="form-control" placeholder="Family">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">Email</label>
                                <input type="text" asp-for="Email" readonly class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">AvatarName</label>
                                <input type="text" asp-for="AvatarName" class="form-control" placeholder="AvatarName">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">PhoneNumber</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">Password</label>
                                <input type="text" asp-for="Password" class="form-control" placeholder="Password">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">Gender</label>
                                <input type="text" class="form-control" placeholder="Gender">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">IsAdmin</label>
                                <input type="text" asp-for="IsAdmin" class="form-control" placeholder="IsAdmin">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="definpu">IsActive</label>
                                <input type="text" asp-for="IsActive" class="form-control" placeholder="IsActive">
                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-success">ثبت ویرایش <i class="fa fa-check right"></i></button>
                </form>
            </div>
        </div>
    </div>

</div>
