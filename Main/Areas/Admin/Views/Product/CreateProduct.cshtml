@using Main.Domain.ViewModel.Product;
@model ProductViewModel

<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <div class="page-content">
            <div class="col-xs-12 col-md-12 col-sm-12">

                <div class="col-lg-12 col-sm-12 col-xs-12 col-md-12">
                    <div class="widget">
                        <div class="widget-header bordered-top bordered-palegreen">
                            <span class="widget-caption">ثبت محصول</span>
                        </div>
                        <div class="widget-body">
                            <div class="collapse in">
                                <form method="post" asp-area="Admin" asp-controller=" Product" asp-action="CreateProduct">

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <label for="name">نام محصول</label>
                                                <input type="text" asp-for="Title" class="form-control" placeholder="نام محصول"><br><br>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="price">قیمت</label>
                                                <input type="number" asp-for="Price" class="form-control"><br><br>

                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="count">تعداد</label>
                                                <input type="number" asp-for="Count" class="form-control"><br><br>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">

                                                <label for="description">توضیحات</label>
                                                <textarea asp-for="Description" class="form-control" placeholder="توضیحات محصول"></textarea><br><br>

                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="image">عکس اصلی</label>
                                                <input type="file" asp-for="MainImage" accept="image/*" class="form-control"><br><br>

                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="category">Category:</label>
                                                <select id="category" name="category">
                                                    <option value="">--Select a category--</option>
                                                    <option value="1">Category 1</option>
                                                    <option value="2">Category 2</option>
                                                    <option value="3">Category 3</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row text-center">
                                        <input type="submit" class="btn btn-blue active" value="ثبت محصول">

                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

